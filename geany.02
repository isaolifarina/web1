#include <stdio.h> 
int main() {
int num1, desc, acresc, VD, VA; 
printf("Qual o valor total da compra?"); 
scanf("%d", &num1);
desc = num1*10/100; 
acresc = num1*5/100; 
VD = num1-desc;
VA = num1+acresc; 
printf("Com o desconto de 10%% ficaria %d\n",VD); 
printf("Com o acréscimo de 5%% ficaria %d",VA);
return 0; 
} 

