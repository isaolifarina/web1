#include <stdio.h> 
int main() { 
int num1, antec, suces; 
printf("Qual número você quer saber o antecessor e o sucessor?");
scanf("%d", &num1);
antec = num1 - 1;
suces = num1 + 1;
printf("O antecessor é %d\n", antec); 
printf("O sucessor é %d", suces); 
return 0;
}

#include <stdio.h> 
int main() { 
int num1, num2, num3, num4, soma, VT;
printf("Me diga um número inteiro para o primeiro valor:");
scanf("%d", &num1); 
printf("Me diga um número inteiro para o segundo valor:");
scanf("%d", &num2);
printf("Para o terceiro valor:");
scanf("%d", &num3);
printf("E por último, o quarto:");
scanf("%d", &num4); 
soma = num1+num2+num3+num4;
VT = soma/4; 
printf("A média final foi de: %d", VT);
return 0; 
}

